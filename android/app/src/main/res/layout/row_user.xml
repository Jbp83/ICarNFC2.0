<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="37dp"
        android:text="Client :"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_Nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:textSize="18sp"
        android:layout_marginStart="21dp"
        android:layout_alignBaseline="@+id/Client"
        android:layout_alignBottom="@+id/Client"
        android:layout_toEndOf="@+id/Client" />

    <TextView
        android:id="@+id/tv_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prenom"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/tv_Nom"
        android:layout_alignBottom="@+id/tv_Nom"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selectionner"
        android:layout_alignBottom="@+id/Client"
        android:layout_toEndOf="@+id/tv_prenom"
        android:layout_marginStart="16dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_select"
        android:layout_toStartOf="@+id/tv_Nom" />
</RelativeLayout>
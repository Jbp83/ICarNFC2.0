<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="21dp"
        android:text="Client :"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_Nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/tv_prenom"
        android:layout_alignBottom="@+id/tv_prenom"
        android:layout_toEndOf="@+id/Client"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/tv_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prenom"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/btn_select"
        android:layout_alignBottom="@+id/btn_select"
        android:layout_toEndOf="@+id/tv_Nom"
        android:layout_marginStart="21dp" />

    <Button
        android:id="@+id/btn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selectionner"
        android:layout_marginEnd="32dp"
        android:layout_alignTop="@+id/Client"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:background="#AAA"
        android:src="@drawable/porsche"
        />

    <TextView
        android:id="@+id/nomvoiture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Name : "
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/avatar"
        android:layout_marginStart="19dp" />

    <TextView
        android:id="@+id/immatriculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        tools:text="Immatriculation"
        android:layout_below="@+id/nomvoiture"
        android:layout_alignStart="@+id/nomvoiture" />

    <TextView
        android:id="@+id/modele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/immatriculation"
        android:layout_below="@+id/immatriculation"
        android:text="TextView"
        android:textColor="@android:color/black"
        tools:text="ModÃ¨le : " />

    <TextView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/modele"
        android:layout_below="@+id/modele"
        android:textColor="@android:color/black"
        tools:text="Cv :" />

    <TextView
        android:id="@+id/idproprio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cv"
        android:layout_below="@+id/cv"
        android:text="TextView" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/Vavatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:background="#AAA"
        android:src="@drawable/porsche"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_marqueV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/black"
        tools:text="Marque :"
        android:layout_alignBaseline="@+id/btnSelectV"
        android:layout_alignBottom="@+id/btnSelectV"
        android:layout_alignStart="@+id/tv_immatriculationV" />

    <TextView
        android:id="@+id/tv_modeleV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/black"
        tools:text="ModÃ¨le : "
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_marqueV"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/tv_immatriculationV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        tools:text="Immatriculation"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/btnSelectV"
        android:layout_toEndOf="@+id/Vavatar" />

    <Button
        android:id="@+id/btnSelectV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selectionner"
        android:layout_below="@+id/tv_modeleV"
        android:layout_alignParentEnd="true" />

</RelativeLayout>